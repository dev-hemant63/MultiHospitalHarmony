@using MultiHospitalHarmony.Enum
@using MultiHospitalHarmony.Extentions
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">Account Ledger</h4>
                </div>
                <div class="col-sm-6 d-flex">
                    <select class="form-control form-control-sm">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            <option value="@SearchCriteria.TID">@SearchCriteria.TID.ToString()</option>
                            <option value="@SearchCriteria.UTR">@SearchCriteria.UTR.ToString()</option>
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" />
                    <button class="btn btn-primary btn-sm btn-last"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm" id="datagrid">
                            <thead class="text-white bg-primary">
                                <tr>
                                    <td>#</td>
                                    <td>TID</td>
                                    <td>User Info</td>
                                    <td>Reference</td>
                                    <td>Service</td>
                                    <td>Opening</td>
                                    <td>Amount</td>
                                    <td>Closing</td>
                                    <td>TrType</td>
                                    <td>EntryAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loaddata();
        });
        var loaddata = () => {
            $.post('/Report/GetLedgerList').done((res) => {
                $('#datagrid tbody').html(res);
            }).fail((xhr) => {
                console.log(xhr.responseText);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
    </script>
}