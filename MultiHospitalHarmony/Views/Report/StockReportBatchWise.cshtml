@using MultiHospitalHarmony.Enum
@using MultiHospitalHarmony.Extentions
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">Stock Report (Batch Wise)</h4>
                </div>
                <div class="col-sm-6 d-flex">
                    <select class="form-control form-control-sm" id="SearchCriteria">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            List<SearchCriteria> criteriaList = Enum.GetValues(typeof(SearchCriteria)).Cast<SearchCriteria>().ToList();
                            foreach (var item in criteriaList)
                            {
                                <option value="@Convert.ToInt32(item)">@item.ToString()</option>
                            }
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" id="SearchText" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loaddata()"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-sm" id="datagrid">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Medicine Name</td>
                                    <td>Supplier Name</td>
                                    <td>Batch Id</td>
                                    <td>Expiry Date</td>
                                    <td>Stock Box</td>
                                    <td>Stock Qty</td>
                                    <td>Sale Price (Per Unit)</td>
                                    <td>Purchase Price (Per Unit)</td>
                                    <td>EntryAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loadData();
        });
        var loadData = () => {
            $.post('/Report/GetStockReportBatchWise').done((result) => {
                if (result.success) {
                    let _html = result.data.map((v, i) => {
                        return `
                                            <tr>
                                            <td>${i + 1}</td>
                                            <td>${v.medicine}</td>
                                            <td>${v.supplier}</td>
                                                    <td>${v.batchCode}</td>
                                                    <td>${v.expiryDate}</td>
                                                    <td>${v.boxSize}</td>
                                                    <td>${v.boxQty}</td>
                                                    <td>${v.salePrice}</td>
                                                            <td>${v.supplierPrice}</td>
                                                    <td>${v.entryAt}</td>
                                            </tr>
                                            `;
                    });
                    $('#datagrid tbody').empty().append(_html);
                }
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
    </script>
}