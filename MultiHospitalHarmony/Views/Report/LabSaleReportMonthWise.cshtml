<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-9">
                    <h4 class="card-title">Sale Report (Month Wise)</h4>
                </div>
                <div class="col-sm-3 d-flex">
                    <input class="form-control form-control-sm" type="number" placeholder="Enter Year : 2300" id="txtYear" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loadData()"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-sm" id="datagrid">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Month</td>
                                    <td>Discount</td>
                                    <td>Total Amount</td>
                                    <td>Paid Amount</td>
                                    <td>Balance Amount</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loadData();
        });
        var loadData = () => {
            var year = $('#txtYear').val();
            $.post('/Report/GetLabSaleReportMonthWise', { Year: year }).done((result) => {
                $('#datagrid tbody').empty().append(result);
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
    </script>
}