@using MultiHospitalHarmony.Models.Common
@model AppResponse<GetLabInvoiceDetails>
@{
    var status = "";
    if (Model.Data.Status == 1)
    {
        status = "Order Completed";
    }
    if (Model.Data.Status == 3)
    {
        status = "Order Returned";
    }
    if (Model.Data.Status == 4)
    {
        status = "Partially Paid";
    }
    if (Model.Data.Status == 5)
    {
        status = "UnPaid";
    }
}
<div class="row">
    <div class="col-lg-12">

        <div class="card mt-3" id="invoice">
            <div class="card-header">
                Invoice
                <button class="btn btn-info light btn-sm d-none" id="btn-print" onclick="printInvoice()"><i class="fa fa-print"></i></button>
            </div>
            <div class="card-body">
                <div class="row mb-5">
                    <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-6">
                        <h6>From:</h6>
                        <div> <strong>@Model.Data.InvoiceFrom.FullName</strong> </div>
                        <div>@Model.Data.InvoiceFrom.Address</div>
                        <div>@Model.Data.InvoiceFrom.ZipCode</div>
                        <div>Email: @Model.Data.InvoiceFrom.Email</div>
                        <div>Phone: @Model.Data.InvoiceFrom.MobileNo</div>
                        <div>Date: @Model.Data.InvoiceDate</div>
                        <div>Status: @status</div>
                    </div>
                    <div class="mt-4 col-xl-3 col-lg-3 col-md-6 col-sm-6 text-end">
                        <h6>To:</h6>
                        <div> <strong>@Model.Data.InvoiceTo.FullName</strong> </div>
                        <div>@Model.Data.InvoiceTo.Address</div>
                        <div>@Model.Data.InvoiceTo.ZipCode</div>
                        <div>Email: @Model.Data.InvoiceTo.Email</div>
                        <div>Phone: @Model.Data.InvoiceTo.MobileNo</div>
                        <input type="hidden" value="@Model.Data.InvoiceNo" id="invoiceno" />
                    </div>
                    
                </div>
                <div class="table-responsive">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th class="center">#</th>
                                <th>Item</th>
                                <th>Description</th>
                                <th class="right">Unit Cost</th>
                                <th class="center">Qty</th>
                                <th class="right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 0;
                                foreach (var item in Model.Data.Laboratory_Invoice_Details)
                                {
                                    i++;
                                            <tr>
                                                <td class="center">@i</td>
                                                <td class="left strong">@item.LaboratoryTest</td>
                                                <td class="left">@item.TestCategory</td>
                                                <td class="right">₹@item.UnitCost</td>
                                                <td class="center">@item.Qty</td>
                                                <td class="right">₹@item.Total</td>
                                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-5"> </div>
                    <div class="col-lg-4 col-sm-5 ms-auto">
                        <table class="table table-clear">
                            <tbody>
                                <tr>
                                    <td class="left"><strong>Subtotal</strong></td>
                                    <td class="right">₹@Model.Data.SubTotal</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Discount</strong></td>
                                    <td class="right">₹@Model.Data.Discount</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>GST</strong></td>
                                    <td class="right">₹@Model.Data.GST</td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Total</strong></td>
                                    <td class="right">
                                        <strong>₹@Model.Data.TotalAmount</strong><br>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Paid Amount</strong></td>
                                    <td class="right">
                                        <strong>₹@Model.Data.PaidAmount</strong><br>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="left"><strong>Balance Amount</strong></td>
                                    <td class="right">
                                        <strong>₹@Model.Data.BalanceAmount</strong><br>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script>
        $(document).ready(function () {
            var invoiceNo = $('#invoiceno').val();
            $('title').text(`Invoice - ${invoiceNo}`);
            var queryString = window.location.search;
            var urlParams = new URLSearchParams(queryString);
            var isprint = urlParams.get('isprint');
            if (isprint == 'true') {
                $('#btn-print').removeClass('d-none');
            }
        });
        var printInvoice = () => {
            $('#btn-print').addClass('d-none');
            var printContents = $('#invoice').html();
            var originalContents = $('body').html();

            $('body').empty().html(printContents);
            window.print();
            $('body').empty().html(originalContents);
            $('#btn-print').removeClass('d-none');
        }
</script>
}