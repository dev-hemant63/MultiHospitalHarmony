@using MultiHospitalHarmony.Enum
@using MultiHospitalHarmony.Extentions
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">Medicine List</h4>
                </div>
                <div class="col-sm-6 d-flex">
                    <select class="form-control form-control-sm" id="SearchCriteria">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            <option value="@SearchCriteria.Name">@SearchCriteria.Name.ToString()</option>
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" id="SearchText" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loaddata()"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-sm table-striped" id="datagrid">
                            <thead class="">
                                <tr>
                                    <td>#</td>
                                    <td>Action</td>
                                    <td>Name</td>
                                    <td>BarCode</td>
                                    <td>Category</td>
                                    <td>Type</td>
                                    <td>Supplier</td>
                                    <td>Strength</td>
                                    <td>Generic Name</td>
                                    <td>Unit</td>
                                    <td>Box Size</td>
                                    <td>Shelf</td>
                                    <td>Details</td>
                                    <td>Price</td>
                                    <td>Image</td>
                                    <td>Supplier Price</td>
                                    <td>Tax (%)</td>
                                    <td>EntryAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loaddata();
        });
        var loaddata = () => {
            $.post('/Medicine/GetMedicineList').done((res) => {
                $('#datagrid tbody').html(res);
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
    </script>
}