@using MultiHospitalHarmony.Enum
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">Supplier List</h4>
                </div>
                <div class="col-sm-9 d-flex">
                    <select class="form-control form-control-sm" id="SearchCriteria">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            <option value="@Convert.ToInt32(SearchCriteria.Name)">@SearchCriteria.Name.ToString()</option>
                            <option value="@Convert.ToInt32(SearchCriteria.MobileNo)">@SearchCriteria.MobileNo.ToString()</option>
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" id="SearchText" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loaddata()"><i class="fa fa-search"></i></button>
                    <a class="btn btn-info btn-sm btn-last" href="/Supplier/Add"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm" id="datagrid">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Action</td>
                                    <td>Full Name</td>
                                    <td>MobileNo</td>
                                    <td>Email</td>
                                    <td>Address</td>
                                    <td>CityName</td>
                                    <td>StateName</td>
                                    <td>Tehsil</td>
                                    <td>CreatedAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loaddata();
        });
        var loaddata = () => {
            let filter = {
                SearchText: $('#SearchText').val(),
                SearchCriteria: $('#SearchCriteria').val(),
            }
            $.post('/Supplier/GetSupplier', filter).done((res) => {
                $('#datagrid tbody').html(res);
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
        </script>
        }