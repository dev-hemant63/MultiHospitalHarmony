@using MultiHospitalHarmony.Models.Common
@model AppResponse<List<Supplier>>
@{
    if (Model != null)
    {
        int count = 0;
        if (Model.Data.Any())
        {
            foreach (var item in Model.Data)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        <div class="btn-group mb-1">
                            <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Supplier/Add?Id=@item.Id">Edit</a>
                            </div>
                        </div>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.MobileNo</td>
                    <td>@item.EmailId</td>
                    <td>@item.Address</td>
                    <td>@item.CityName</td>
                    <td>@item.StateName</td>
                    <td>@item.Tahsil</td>
                    <td>@item.EntryAt</td>
                </tr>
            }
        }
        else
        {
            <tr class="text-center">
                <td colspan="23">
                    <img src="~/images/nodata.webp" />
                </td>
            </tr>
        }
    }
}