@using MultiHospitalHarmony.Enum
@using MultiHospitalHarmony.Extentions
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">User List</h4>
                </div>
                <div class="col-sm-6 d-flex">
                    <select class="form-control form-control-sm" id="ddlRole">
                        <option value="">:: Select Role ::</option>
                        @{
                                            <option value="@AppRole.SuperDistributor">@AppRole.SuperDistributor.ToString()</option>
                                            <option value="@AppRole.Distributor">@AppRole.Distributor.ToString()</option>
                                            <option value="@AppRole.Agent">@AppRole.Agent.ToString()</option>
                                            <option value="@AppRole.Hospital">@AppRole.Hospital.ToString()</option>
                            <option value="@AppRole.PharmacyAdmin">Pharmacy</option>
                                            <option value="@AppRole.Doctor">@AppRole.Doctor.ToString()</option>
                                            <option value="@AppRole.Patient">@AppRole.Patient.ToString()</option>
                                            <option value="@AppRole.Reception">@AppRole.Reception.ToString()</option>
                        }
                    </select>
                    <select class="form-control form-control-sm" id="SearchCriteria">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            List<SearchCriteria> criteriaList = Enum.GetValues(typeof(SearchCriteria)).Cast<SearchCriteria>().ToList();
                            foreach (var item in criteriaList)
                            {
                                                <option value="@Convert.ToInt32(item)">@item.ToString()</option>
                            }
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" id="SearchText" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loaddata()"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-sm" id="datagrid">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Action</td>
                                    <td>Full Name</td>

                                    @if (User.GetRoleId<int>() == 1)
                                    {
                                        <td>Parent</td>
                                    }
                                    <td>Role</td>
                                    <td>Balance</td>

                                    <td>User Name</td>
                                    <td>Email</td>
                                    <td>MobileNo</td>
                                    <td>Address</td>
                                    <td>CityName</td>
                                    <td>StateName</td>
                                    <td>Tehsil</td>
                                    <td>IsActive</td>
                                    <td>CreatedAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalCenter">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Assign Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="dataGrid">

                    

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loaddata();
        });
        var loaddata = () => {
            let filter = {
                RoleId: $('#ddlRole').val(),
                SearchText: $('#SearchText').val(),
                SearchCriteria: $('#SearchCriteria').val(),
            }
            $.post('/user/getUserList', filter).done((res) => {
                $('#datagrid tbody').html(res);
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
        var getPermisions = (userId) => {
            $.post('/user/GetPermisions', { UserId: userId }).done((response) => {
                if (response.success) {
                    let _html = response.data.map((v, i) => {
                        let attribute = "";
                        if (v.isPermission) {
                            attribute = "checked";
                        }
                        return `<div class="col-sm-4">
                                <div class="form-check">
                                   <input class="form-check-input_${v.id}" type="checkbox" ${attribute} id="form-check-label_${v.id}" onchange="assignPermission('${userId}','${v.id}')">
                                   <label class="form-check-label_${v.id} text-nowrap" for="form-check-label_${v.id}">${v.name}</label>
                                </div>
                            </div>`;
                    });
                    $('#dataGrid').empty().append(_html);
                }
                else {
                    let _alert = `<div class="col-xl-12">
                                        <div class="alert alert-danger left-icon-big alert-dismissible fade show">
                                            <div class="media">
                                                <div class="alert-left-icon-big">
                                                    <span><i class="mdi mdi-alert"></i></span>
                                                </div>
                                                <div class="media-body">
                                                    <h5 class="mt-1 mb-2">Failed!</h5>
                                                    <p class="mb-0">${v.message}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>`;
                    $('#dataGrid').empty().append(_alert);
                }
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
        var assignPermission = (userId,moduleId) => {
            let obj = {
                UserId: userId,
                ModuleId: moduleId,
            }
            $.post('/user/AssignPermission', obj).done((res) => {
                Swal.fire({
                    title: res.success == true ? "Success" : "Failed",
                    text: res.message,
                    icon: res.success == true ? "success" : "error"
                });
            }).fail((xhr) => {
                console.log(xhr);
                Swal.fire({
                    title: "Failed!!",
                    text: "Server Error!",
                    icon: "error"
                });
            });
        }
    </script>
}