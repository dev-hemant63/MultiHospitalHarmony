<div class="col-xl-12 col-lg-12" id="maindiv">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Blood Donation</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <div class="row">
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">FullName</label>
                        <input type="text" class="form-control" id="txtfullname" required>
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">MobileNo</label>
                        <input type="number" class="form-control" id="txtmobile" required>
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Email (optional)</label>
                        <input type="email" class="form-control" id="txtemail"  />
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">DOB</label>
                        <input type="date" class="form-control" id="txtemail" />
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Gender</label>
                        <select class="form-control">
                            <option value="">:: SELECT GENDER ::</option>
                        </select>
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Blood Type</label>
                        <input type="text" class="form-control" id="txtemail" />
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Quantity (In Liters)</label>
                        <input type="text" class="form-control" id="txtemail" />
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Storage Location</label>
                        <input type="text" class="form-control" id="txtemail" />
                    </div>
                    <div class="col-sm-4 m-b30">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" id="txtAddress" required>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-3">
                        <button type="submit" class="btn btn-primary" >Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>