@using MultiHospitalHarmony.Enum
@model CreateUserVM

<div class="col-xl-12 col-lg-12 mb-3" id="maindiv">
    <div class="basic-form">
        <div class="row">
            <div class="col-sm-4 m-b30">
                <label class="form-label">MobileNo</label>
                <input type="text" class="form-control" id="txtPatientInfo" asp-for="@Model.MobileNo" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">PatientId</label>
                <input type="text" class="form-control" id="txtUserName" asp-for="@Model.UserName" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">FullName</label>
                <input type="text" class="form-control" id="txtfullname" asp-for="@Model.FullName" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">DOB</label>
                <input type="date" class="form-control" id="txtdob" asp-for="@Model.DOB" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Age</label>
                <input type="text" class="form-control" id="txtAge" asp-for="@Model.Age" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Blood Group</label>
                <input type="text" class="form-control" id="txtBloodGroup" asp-for="@Model.BloodGroup" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Marital Status</label>
                <select class="form-control" id="ddlMarital" asp-for="@Model.Marital" required>
                    <option value="">:: Please select ::</option>
                    <option value="M">Married</option>
                    <option value="U">UnMarried</option>
                    <option value="O">Other</option>
                </select>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Gender</label>
                <select class="form-control" id="ddlgender" asp-for="@Model.Gender" required>
                    <option value="">:: Please select ::</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                    <option value="O">Other</option>
                </select>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Email (optional)</label>
                <input type="email" class="form-control" id="txtemail" asp-for="@Model.Email" />
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">ZipCode</label>
                <input type="number" class="form-control" id="txtZipCode" asp-for="@Model.ZipCode" onblur="getAreaByPincode()" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" id="txtAddress" asp-for="@Model.Address" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">State</label>
                <select class="form-control" id="ddlState" asp-for="@Model.StateId" required>
                    <option value="">Please select</option>
                    @{
                        foreach (var item in Model.State)
                        {
                            <option value="@item.Id">@item.StateName</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">City</label>
                <select class="form-control" id="ddlcity" asp-for="@Model.CityId" required>
                    <option value="">Please select</option>
                    @{
                        foreach (var item in Model.City)
                        {
                            <option value="@item.Id">@item.CityName</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Tehsil</label>
                <input type="text" class="form-control" id="txtTehsil" asp-for="@Model.Tehsil" required>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12 card-header mb-3">
                <h4 class="card-title">Guardian Details</h4>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Guardian Name</label>
                <input type="text" class="form-control" id="txtGuardianName" asp-for="@Model.GuardianName" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Guardian Mobile</label>
                <input type="text" class="form-control" id="txtGuardianMobile" asp-for="@Model.GuardianMobile" required>
            </div>
            <div class="col-sm-4 m-b30">
                <label class="form-label">Relation With Patient</label>
                <input type="text" class="form-control" id="txtRelationWithPatient" asp-for="@Model.Relation_with_Patient" required>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12 card-header mb-3">
                <h4 class="card-title">Medical Details</h4>
            </div>
            <div class="col-sm-4">
                <label>Blood Pressure</label>
                <input type="text" id="txtbloodpressure" class="form-control" placeholder="Blood Pressure" required />
            </div>
            <div class="col-sm-4">
                <label>Pulse rate</label>
                <input type="text" id="txtpluserate" class="form-control" placeholder="Pulse rate" required />
            </div>
            <div class="col-sm-4">
                <label>Wight</label>
                <input type="text" id="txtWight" class="form-control" placeholder="Wight" required />
            </div>
            <div class="col-sm-4">
                <label>Preferred For Admit</label>
                <select class="form-control" id="ddlforAdmit" onchange="PreferredForAdmit()" required>
                    <option value="">:: Please select ::</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
            <div class="col-sm-4 d-none PreferredForAdmit">
                <label>Ward Type</label>
                <select class="form-control" id="ddlwardtpe" onchange="bindWardRoom()">
                    <option value="">:: Please select ::</option>
                    @{
                        foreach (var item in Model.WardType)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-4 d-none PreferredForAdmit">
                <label>Room</label>
                <select class="form-control" id="ddlroom" onchange="bindWardBed()">
                    <option value="">:: Please select ::</option>
                </select>
            </div>
            <div class="col-sm-4 d-none PreferredForAdmit">
                <label>Bed</label>
                <select class="form-control" id="ddlbed">
                    <option value="">:: Please select ::</option>
                </select>
            </div>
            <div class="col-sm-4 d-none PreferredForAdmit">
                <label>Assign Doctor</label>
                <select class="form-control" id="ddldoctor">
                    <option value="">:: Please select ::</option>
                    @{
                        foreach (var item in Model.UserList)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-4">
                <label>Preferred For Surgery</label>
                <select class="form-control" id="ddlforSurgeries" onchange="PreferredForSurgeries()" required>
                    <option value="">:: Please select ::</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
            <div class="col-sm-4 d-none" id="Surgeries">
                <label>Surgeries</label>
                <select class="form-control" id="ddlSurgeries" required>
                    <option value="">:: Please select ::</option>
                    @{
                        foreach (var item in Model.SurgeryList)
                        {
                            <option value="@item.Id">@item.SurgeryName [@item.Price]</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-4">
                <label>Prescription File</label>
                <input type="file" id="txtPrescriptionFile" class="form-control" placeholder="Prescription" required />
            </div>
            <div class="col-sm-12">
                <label>Diagnosis</label>
                <textarea id="txtDiagnosis" name="txtDiagnosis" class="form-control texteditor" placeholder="Diagnosis" required></textarea>
            </div>
            <div class="col-sm-12 mb-3">
                <label>Prescription</label>
                <textarea id="txtPrescription" name="txtPrescription" class="form-control texteditor2" placeholder="Prescription" required></textarea>
            </div>
        </div>
        
    </div>
</div>
<hr />
<div class="col-sm-12">
    <div class="row">
        <div class="col-sm-2">
            <h4 class="card-title">Medical History</h4>
        </div>
    </div>
    <hr>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-sm">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Doctor</td>
                    <td>Wight</td>
                    <td>Diagnosis</td>
                    <td>Prescription</td>
                    <td>Prescription File</td>
                    <td>DateOfVisit</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="23" class="text-center text-danger">No any medical history</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row mt-3">
    <div class="col-sm-3">
        <button type="submit" class="btn btn-primary" onclick="savePatient('@Model.Id')">Save</button>
    </div>
</div>