@using MultiHospitalHarmony.Models.Common
@model AppResponse<List<PatientWardDetails>>
<div class="col-sm-12">
    <div class="table-responsive">
        <table class="table table-bordered table-sm" id="datagrid">
            <thead class="text-white bg-primary">
                <tr>
                    <td>#</td>
                    <td>Ward</td>
                    <td>Room</td>
                    <td>Bed</td>
                    <td>StartOn</td>
                    <td>EndOn</td>
                    <td>RecommendedBy</td>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Success && Model.Data != null)
                {
                    int i = 0;
                    foreach (var item in Model.Data)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.WardType</td>
                            <td>@item.Ward</td>
                            <td>@item.Bed</td>
                            <td>@item.StartOn</td>
                            <td>@item.EndOn</td>
                            <td>@item.RecommendedBy</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="34" class="text-center text-danger">No record found...</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>