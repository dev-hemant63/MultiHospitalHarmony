@using MultiHospitalHarmony.Enum
@using MultiHospitalHarmony.Extentions
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="col-sm-3">
                    <h4 class="card-title">Purchase List</h4>
                </div>
                <div class="col-sm-6 d-flex">
                    <select class="form-control form-control-sm" id="SearchCriteria">
                        <option value="">:: Search Criteria ::</option>
                        @{
                            List<SearchCriteria> criteriaList = Enum.GetValues(typeof(SearchCriteria)).Cast<SearchCriteria>().ToList();
                            foreach (var item in criteriaList)
                            {
                                <option value="@Convert.ToInt32(item)">@item.ToString()</option>
                            }
                        }
                    </select>
                    <input class="form-control form-control-sm" placeholder="Search Text" id="SearchText" />
                    <button class="btn btn-primary btn-sm btn-last" onclick="loaddata()"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm" id="datagrid">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Action</td>
                                    <td>Supplier</td>
                                    <td>InvoiceNo</td>
                                    <td>Status</td>
                                    <td>Sub Total Amount</td>
                                    <td>Discount</td>
                                    <td>Total Amount</td>
                                    <td>Paid Amount</td>
                                    <td>Balance Amount</td>
                                    <td>Purchase Date</td>
                                    <td>Details</td>
                                    <td>Remark</td>
                                    <td>EntryAt</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/purchase.js"></script>
    <script>
        $(document).ready(function () {
            loadData();
        });
    </script>
}