<div class="row">
    <div class="col-xl-12 col-lg-12" id="maindiv">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Purchase</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Supplier</label>
                            <select class="form-control" id="ddlSupplier" onchange="bindMedicine(1)" required>
                                <option value="0">:: SELECT SUPPLIER ::</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label>Invoice No</label>
                            <input type="text" class="form-control" id="txtInvoiceNo" required />
                        </div>
                        <div class="col-sm-4">
                            <label>Payment Type</label>
                            <select class="form-control" id="ddlPaymentType" required>
                                <option value="0">:: SELECT PAYMENT TYPE ::</option>
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label>Date</label>
                            <input type="date" class="form-control" id="txtdate" required />
                        </div>
                        <div class="col-sm-4">
                            <label>Details</label>
                            <input type="text" class="form-control" id="txtDetails" required />
                        </div>
                        <div class="col-sm-4">
                            <label>Remark</label>
                            <input type="text" class="form-control" id="txtRemark" required />
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-sm text-nowrap">
                                <thead>
                                    <tr>
                                        <td>Medicine Information</td>
                                        <td>Batch Code</td>
                                        <td>Expiry Date</td>
                                        <td>Box Pattern</td>
                                        <td>Box Qty</td>
                                        <td>Quantity</td>
                                        <td>Supplier Price</td>
                                        <td>Box MRP</td>
                                        <td>Total Purchase Price</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody id="addpurchase">
                                    <tr data-rowid="1" class="item d-none" id="item_1">
                                        <td>
                                            <select class="form-control" id="ddlMedicine_1" onchange="handelMedicine()">
                                                <option value="0">:: SELECT Medicine ::</option>
                                            </select>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control form-control-sm" id="txtBatch_1" />
                                        </td>
                                        <td>
                                            <input type="date" class="form-control form-control-sm" id="txtExpiry_1" />
                                        </td>
                                        <td>
                                            <select class="form-control form-control-sm" id="ddlBox_1">
                                                <option value="0">:: SELECT BOX ::</option>
                                            </select>
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" oninput="handlePrice('1')" id="txtBoxQty_1" />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" id="txtTotalQty_1" />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" id="txtSupplierPrice_1" />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" id="txtMRP_1" />
                                        </td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" id="txtTotalPrice_1" />
                                        </td>
                                        <td>
                                            <button class="btn btn-danger light btn-sm delete"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="text-end">Sub Total:</td>
                                        <td><input type="number" class="text-right form-control form-control-sm" id="txtsubtotal" /></td>
                                        <td><button class="btn btn-info light btn-sm" onclick="addRow()"><i class="fa fa-plus"></i></button></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="text-end">Discount:</td>
                                        <td><input type="number" class="text-right form-control form-control-sm" oninput="handlePrice()" id="txtDiscount" /></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="text-end">Grand Total:</td>
                                        <td><input type="number" class="text-right form-control form-control-sm" id="txtGrandTotal" /></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="text-end">Paid Amount:</td>
                                        <td><input type="number" class="text-right form-control form-control-sm" id="paidAmount" oninput="handlePrice()" /></td>
                                    </tr>
                                    <tr>
                                        <td colspan="8" class="text-end">Due Amount:</td>
                                        <td><input type="number" class="text-right form-control form-control-sm" id="txtBalanceAmount" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary" onclick="saveData()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/purchase.js"></script>
    <script>
        $(document).ready(function () {
            bindSupliers();
        });
    </script>
}